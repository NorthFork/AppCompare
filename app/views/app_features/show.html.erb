<p>
  <b>App:</b>
  <%= @app_feature.app.name %>
</p>

<p>
  <b>Feature:</b>
  <%= @app_feature.feature.name %>
</p>

<p>
  <b>Feature status:</b>
  <%= @app_feature.feature_status.name %>
</p>

<p>
  <b>Description:</b>
  <%= @app_feature.description %>
</p>

<p>
  <b>Information Source:</b>
  <%= @app_feature.source ? @app_feature.source.name : 'Not specified' %>
</p>

<% if can? :update, @app_feature %>
  <%= link_to 'Edit', edit_app_app_feature_path(@app, @app_feature) %> |
<% end %>

<%= link_to 'Back', app_app_features_path(@app) %>
