<!DOCTYPE html>
<html>
<head>
  <title>ILS Compare</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <div id="container">
    <header>
      <%= render 'partials/nav' %>
    </header>

    <div class="notifications">
      <% if alert %>
        <p id="alert"><%= alert %></p>
      <% end %>
      <% if notice %>
        <p id="notice"><%= notice %></p>
      <% end %>
    </div>

    <div id="main" role="main">
      <%= yield %>
    </div>

    <footer>

    </footer>
  </div>

</body>
</html>
