<h1>Feature Sources</h1>

<table>
  <tr>
    <th>Source</th>
    <th>Description</th>
    <th>URL</th>
    <th></th>
    <th></th>
  </tr>

<% @sources.each do |source| %>
  <tr>
    <td><%= source.name %></td>
    <td><%= source.description %></td>
    <td><%= source.URL %></td>
    <td><%= link_to 'Edit', edit_source_path(source) %></td>
    <td><%= link_to 'Destroy', source, :confirm => 'Are you sure you wish to remove ' + source.name + '?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Source', new_source_path %>
<%= link_to 'Back to Features', feature_categories_path %>
